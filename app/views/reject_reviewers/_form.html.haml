= semantic_form_for @reviewer, url: reviewer_reject_path(@conference, @reviewer) do |form|
  = form.actions do
    = form.action :submit, label: :reject_reviewer, button_html: {tabindex: autotab}
    = t('generic.or')
    = link_to t('formtastic.actions.accept_reviewer'), reviewer_accept_path(@conference, @reviewer)