= form.inputs do
  = form.input :organizer_id, as: :hidden
  = form.input :session_id, as: :hidden
  = form.input :outcome_id, required: true, as: :select, collection: options_for_select(Outcome.all.map{|o| [t(o.title), o.id]}, @review_decision.outcome.try(:id)), input_html: {tabindex: autotab}
  = form.input :note_to_authors, required: true, input_html: {rows: 10, tabindex: autotab}

  = form.actions do
    = form.action :submit, label: :submit_review_decision, button_html: {tabindex: autotab}